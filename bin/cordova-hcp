#! /usr/bin/env node
var path = require('path');
var argv = require('yargs').argv;
var chcpContext = require(path.resolve(__dirname, '..', 'dist', 'context.js'));

var cmd = argv._[0];
switch(cmd) {
  case 'build':
  case 'login':
  case 'init':
  case 'server':
  case 'deploy':
    console.log('Running ' + cmd);
    executeCmd(cmd, argv);
    break;
  default:
    console.log('TODO: Should print usage instructions.');
    process.exit(0);
}

function executeCmd(cmd, argv) {
  var pathToExecutor = path.resolve(__dirname, '..', 'dist', cmd + '.js');
  var execute = require(pathToExecutor);
  var context = chcpContext(argv);
  
  execute(context);
}
